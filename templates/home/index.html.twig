{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
	<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{dishes1.name}}</span>!</h2>
								<p>Our plate, {{dishes1.description}} for {{dishes1.price}}!</p>
								<a href="{{ path('menu') }}" class="site-btn">Menu</a>
								<a href="#" class="site-btn sb-c2">Order</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('images/' ~ dishes1.image)}}">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{dishes2.name}}</span>!</h2>
								<p>Our plate, {{dishes2.description}} for {{dishes2.price}}!</p>
								<a href="{{ path('menu') }}" class="site-btn">Menu</a>
								<a href="#" class="site-btn sb-c2">Order</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{ asset('images/' ~ dishes2.image)}}">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero section end -->

{% endblock %}
